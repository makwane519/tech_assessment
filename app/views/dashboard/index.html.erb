<div class="wrapper">
  <%= render 'layouts/sidenavbar' %>
  <div class="main_content">
      <div class="header">
        <%= render 'layouts/navbar' %>
        <div id="notifications" class="position-relative"></div>
      </div> 
      
      <div class="info mt-4">
        <div class="row">
          <div class="col-12 mb-3">
            <h3 class="fw-bold">My Courses</h3>
          </div>
          <% @courses.each do |course| %>
            <div class="col-md-4">
              <div class="card shadow-sm rounded-3">
                <% first_color = ["#ff9a9e", "#fad0c4", "#ffdde1", "#fbc2eb", "#a1c4fd", "#c2e9fb"].sample %>
                <% second_color = ["#ffdde1", "#fbc2eb", "#a1c4fd", "#c2e9fb", "#ff9a9e", "#fad0c4"].sample %>
                <div class="gradient-box text-white p-3 fw-bold" style="background:linear-gradient(45deg, <%= first_color %>, <%= second_color %>);">
                  <% fav_color = current_user.favorites.find_by(course_id: course.id).present? ? '#ff0000' : '#f5f5f5' %>
                  <%= link_to add_to_favorite_dashboard_index_path(course_id: course.id), class: "float-end" do %>
                    <i class="fa fa-heart heart-icon" style="color:<%= fav_color %>;"></i>
                  <% end %>
                  <%= course.title %>
                </div>
                <div class="card-body">
                  <span class="badge" style="background:<%= course.status == 'active' ? '#41ef68' : '#777777' %>">
                    <strong><%= course.status == 'active' ? 'Open' : 'Closed' %></strong>
                  </span>
                  <h5 class="card-title mt-2">Course: <%= course.title %></h5>
                  <p class="card-text">
                    <strong>Code:</strong> <%= course.code %> <br>
                    <strong>Term:</strong> <%= course.term.name %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <%= link_to 'View Details', course_path(course), class: "btn btn-info" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 mb-3">
          <h3 class="fww-bold" style="margin-left: 20px;">Announcements</h3>
        </div>
        <% @announcements.each do |announcement| %>
          <div class="col-md-4">
            <div class="card shadow-sm rounded-3 announcement-card">
              <% if announcement.image.attached? %>
                <img src="<%= url_for(announcement.image) %>" class="img-box" alt="Announcement Image">
              <% else %>
                <% first_color = ["#ff9a9e", "#fad0c4", "#ffdde1", "#fbc2eb", "#a1c4fd", "#c2e9fb"].sample %>
                <% second_color = ["#ffdde1", "#fbc2eb", "#a1c4fd", "#c2e9fb", "#ff9a9e", "#fad0c4"].sample %>
                <div class="gradient-box text-white p-3 fw-bold" style="background:linear-gradient(45deg, <%= first_color %>, <%= second_color %>);">
                  <%= announcement.title %>
                </div>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= announcement.title %></h5>
                <p class="card-text"><%= announcement.content %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <%= link_to 'View Details', announcement_path(announcement), class: "btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  import consumer from "channels/consumer";
  consumer.subscriptions.create("NotificationChannel", {
    received(data) {
      let notificationsContainer = document.getElementById("notifications");
      let newNotification = `
        <div class="alert alert-info shadow-sm p-2 rounded">
          <strong>${data.title}</strong><br>
          ${data.content} <br>
          <small>${data.created_at}</small>
        </div>`;
      notificationsContainer.insertAdjacentHTML("afterbegin", newNotification);
    }
  });
</script>
